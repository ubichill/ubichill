{
  "name": "ubichill",
  "version": "1.0.0",
  "private": true,
  "description": "2D metaverse-style work sharing web application",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "docker:up": "node scripts/start-plugins.mjs up -d",
    "docker:down": "node scripts/start-plugins.mjs down",
    "build": "turbo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "pnpm --filter \"./packages/*\" clean",
    "test": "echo \"No tests specified yet\" && exit 0"
  },
  "workspaces": [
    "packages/*",
    "plugins/*/frontend"
  ],
  "volta": {
    "node": "22.13.0",
    "pnpm": "10.28.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.13.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "kill-port": "^2.0.1",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  }
}