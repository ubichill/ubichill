{
  "name": "ubichill",
  "version": "1.0.0",
  "private": true,
  "description": "2D metaverse-style work sharing web application",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm --filter \"./packages/*\" --parallel dev",
    "build": "turbo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "pnpm --filter \"./packages/*\" clean",
    "test": "echo \"No tests specified yet\" && exit 0"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.13.4",
    "cross-env": "^10.1.0",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  }
}