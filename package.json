{
  "name": "ubichill",
  "version": "1.0.0",
  "private": true,
  "description": "2D metaverse-style work sharing web application",
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "pnpm --filter \"./packages/*\" --parallel dev",
    "build": "pnpm --filter \"./packages/*\" build",
    "lint": "pnpm --filter \"./packages/*\" lint",
    "clean": "pnpm --filter \"./packages/*\" clean",
    "test": "echo \"No tests specified yet\" && exit 0"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}