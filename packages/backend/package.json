{
    "name": "@ubichill/backend",
    "version": "1.0.0",
    "private": true,
    "description": "Backend server for Ubichill",
    "main": "dist/index.js",
    "scripts": {
        "dev": "wait-on ../shared/dist/index.js && ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "clean": "rimraf dist",
        "lint": "biome lint .",
        "lint:fix": "biome lint --apply .",
        "format": "biome format --write ."
    },
    "dependencies": {
        "@ubichill/shared": "workspace:*",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "socket.io": "^4.8.3",
        "yaml": "^2.8.2",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.4",
        "rimraf": "^6.0.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.3",
        "wait-on": "^9.0.3"
    }
}